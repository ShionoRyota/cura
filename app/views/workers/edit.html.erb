<%= form_for(@worker) do |f| %>

<div class="field">
    <%= f.label :氏名 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :年齢 %><br />
    <%= f.select :nennrei,options_for_select((20..50).to_a),{include_blank: '年齢を選択してください'} %>
  </div>

  <div class="field">
    <%= f.label :性別 %><br />
    <%= f.select :gender,options_for_select(["男","女"]),{include_blank: '性別を選択してください'} %>
  </div>

  <div class="field">
  <%= f.label :画像 %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
  <%= f.label :自己紹介 %><br />
    <%= f.text_field :introduce %>
  </div>

  <%= f.submit "Sign up" %>

  <% end %>