<%= form_for(@personal) do |f| %>

<div class="field">
    <%= f.label :氏名 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :年齢 %><br />
    <%= f.select :nennrei,options_for_select((20..50).to_a),{include_blank: '年齢を選択してください'} %>
  </div>

  <div class="field">
    <%= f.label :性別 %><br />
    <%= f.select :gender,options_for_select(["男性","女性"]),{include_blank: '性別を選択してください'} %>
  </div>

  <div class="field">
  <%= f.label :住所 %><br />
    <%= f.text_field :adress %>
  </div>

  <div class="field">
  <%= f.label :自己紹介 %><br />
    <%= f.text_field :introduce %>
  </div>

  <%= f.submit "登録" %>

  <% end %>